<nav class="" data-grid="categories">
  <div class="panel">
    <div class="panel-title">
      <h3>Categorias</h3>
    </div>
    <ul class="list-unstyled panel-list">
      <% @categories.each do |category| %>
        <li>
          <a href="/?category=<%= category.id %>" class="no-decoration small-scale">
            <%= category.name %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="search-field">
    <input type="text">
    <button type="button" name="button">OK</button>
  </div>
</nav>
